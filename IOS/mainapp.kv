#:kivy 2.1.0

WindowManager:
    LoginScreen:
    HomeScreen:
<ListItemWithCheckbox>:

<RangeSlider>:
    canvas:
        Color:
            rgb: 1, 1, 1
        BorderImage:
            pos: (self.x + self.padding, self.center_y - sp(18)) if self.orientation == 'horizontal' else (self.center_x - 18, self.y + self.padding)
            size: (self.width - self.padding * 2, sp(36)) if self.orientation == 'horizontal' else (sp(36), self.height - self.padding * 2)
            source: 'atlas://data/images/defaulttheme/slider{}_background{}'.format(self.orientation[0], '_disabled' if self.disabled else '')
        Color:
            rgba: (1,0,0,1)
        BorderImage:
            pos: (self.value1_pos[0], self.center_y - sp(18)) if self.orientation == 'horizontal' else (self.center_x - sp(18), self.value1_pos[1])
            size: (self.value2_pos[0] - self.value1_pos[0], sp(36)) if self.orientation == 'horizontal' else (sp(36), self.value2_pos[1] - self.value1_pos[1])
            source: 'atlas://data/images/defaulttheme/slider{}_background{}'.format(self.orientation[0], '_disabled' if self.disabled else '')
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: (self.value1_pos[0] - sp(16), self.center_y - sp(17)) if self.orientation == 'horizontal' else (self.center_x - sp(16), self.value1_pos[1] - sp(16))
            size: (sp(32), sp(32))
            source: 'atlas://data/images/defaulttheme/slider_cursor{}'.format('_disabled' if self.disabled else '')
        Rectangle:
            pos: (self.value2_pos[0] - sp(16), self.center_y - sp(17)) if self.orientation == 'horizontal' else (self.center_x - sp(16), self.value2_pos[1] - sp(16))
            size: (sp(32), sp(32))
            source: 'atlas://data/images/defaulttheme/slider_cursor{}'.format('_disabled' if self.disabled else '')


<LoginScreen>:
    orientation: 'vertical'
    name: 'login'
    MDScreen:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            height: "180dp"
            Image:
                source: "app-icon.png"
        
        MDLabel:
            text: "Welcome!"
            
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            font_style: "H4"
            theme_text_color: "Primary"


        MDTextField:
            mode: "round"
            id: username
            hint_text: "Username"
            icon_right: "account"
            icon_right_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: None
            width: "300dp"

        MDTextField:
            mode: "round"
            id: password
            hint_text: "Password"
            icon_right: "key-variant"
            icon_right_color: app.theme_cls.primary_color
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint_x: None
            width: "300dp"

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: root.on_login()

<HomeScreen>:
    name: 'home_screen'
    orientation: 'vertical'
    MDScreen:
        orientation: 'vertical'
        MDBottomNavigation:
            orientation: 'vertical'
            panel_color: app.theme_cls.primary_color
            selected_color_background: "black"
            text_color_active: "lightblue"

            MDBottomNavigationItem:
                name: 'data_screen'
                
                text: 'Data'
                icon: 'coolant-temperature'

                FloatLayout:
                    orientation: 'vertical'
                    size: root.width, root.height
                    
                    MDLabel:
                        id: circular_progress_top
                        text: '0%'
                        text_color: (0.07,0.07,0.07,1)
                        font_style: 'H4'
                        halign: "center"
                        
                        size_hint: None, None
                        width: 200
                        height: 200
                        
                        progress: 0
                        
                        pos_hint: {'center_x':.5, 'center_y':.8}
                        
                        canvas.before:
                            # Main ellipse as background
                            Color:
                                rgba: (0.58,0.83,0.93,1)
                            Ellipse:
                                size: self.size
                                pos: self.pos
                            
                            # Pie Chart ellipse as progress
                            Color:
                                rgba: (0.81,0.11,0.11,1)
                            Ellipse:
                                size: self.size
                                pos: self.pos
                                angle_end: self.progress
                            
                            # small ellipse that cover the center of progress
                            Color:
                                rgba: (1,1,1,1)
                            Ellipse:
                                size: [self.width - 45 ,self.height - 45]
                                pos: [(self.center_x - (self.width - 45)/2), (self.center_y - (self.height - 45)/2)]

                    MDLabel:
                        id: circular_progress_bottom
                        text: '0%'
                        text_color: (0.07,0.07,0.07,1)
                        font_style: 'H4'
                        halign: "center"

                        size_hint: None, None
                        width: 200
                        height: 200
                        
                        progress: 0
                        
                        pos_hint: {'center_x':.5, 'center_y':.4}
                        
                        canvas.before:
                            # Main ellipse as background
                            Color:
                                rgba: (0.58,0.83,0.93,1)
                            Ellipse:
                                size: self.size
                                pos: self.pos
                            
                            # Pie Chart ellipse as progress
                            Color:
                                rgba: (0.81,0.11,0.11,1)
                            Ellipse:
                                size: self.size
                                pos: self.pos
                                angle_end: self.progress
                            
                            # small ellipse that cover the center of progress
                            Color:
                                rgba: (1,1,1,1)
                            Ellipse:
                                size: [self.width - 45 ,self.height - 45]
                                pos: [(self.center_x - (self.width - 45)/2), (self.center_y - (self.height - 45)/2)]
                            
                Slider:
                    orientation: 'horizontal'
                    min: 0
                    max: 360
                    step: 1
                    
                    size_hint: None, None
                    width: 500
                    height: 200
                    
                    pos_hint: {'center_x':.5}
                    
                    on_value: root.controlTheProgress(*args)

            MDBottomNavigationItem:
                name: 'control_screen'
                text: 'Controls'
                icon: 'power-settings'
                orientation: 'vertical'
                MDFloatLayout:
                    orientation: 'vertical'
                    size: root.width, root.height
                    MDFloatingActionButton:
                        pos_hint: {'center_x':.5, 'center_y':.8}
                        adaptive_size: True
                        md_bg_color: app.theme_cls.primary_color
                        icon_size: "64sp"
                        icon: 'power'
                        on_release:
                            self.icon = "power" if self.icon == "power-off" else "power-off"

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.1
                        pos_hint: {'center_x':.5, 'center_y':.6}

                        Widget:
                            size_hint_x: 0.2

                        MDIconButton:
                            icon: "fan-remove"
                            halign: "center"
                        
                        MDSlider:
                            min: 0
                            max: 100
                            step: 5
                            value: 50
                            orientation: 'horizontal'
                            md_bg_color: "lightblue"
                            # size_hint_x: 0.4
                            on_value: root.controlTheProgress(*args)
                            hint: True
                            hint_bg_color: "red"
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            
                            track_color_active: "lightblue"
                            track_color_inactive: "lightblue"

                        MDIconButton:
                            icon: "fan"
                            halign: "center"

                        Widget:
                            size_hint_x: 0.2

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.1
                        pos_hint: {'center_x':.5, 'center_y':.4}
                        Widget:
                            size_hint_x: 0.3

                        MDLabel:
                            text: 'Enable Temperature Range?'
                            color: (0.07,0.07,0.07,1)

                        MDSwitch:
                            id: switch_temp
                            icon_active: "check"

                            track_color_active: "lightblue"
                            thumb_color_inactive: "lightgrey"
                            thumb_color_active: "lightblue"
                            track_color_disabled: "lightgrey"

                        Widget:
                            size_hint_x: 0.3
                    
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.1
                        pos_hint: {'center_x':.5, 'center_y':.3}
                        adaptive_width: True

                        # MDLabel:
                        #     text: 'Turn fan off when temperature is between'
                        #     color: (0.07,0.07,0.07,1)
                        
                        MDTextField:
                            id: temp_min
                            hint_text: "Min"
                            input_filter: "int"
                            color_mode: 'custom'
                            line_color_focus: (0.58,0.83,0.93,1)
                            line_color_normal: (0.58,0.83,0.93,1)
                            hint_text_color_normal: (0.58,0.83,0.93,1)
                            text_color_normal: (0.58,0.83,0.93,1)
                            text_color_focus: (0,0,0,1)
                            mode: "line"
                            disabled: not switch_temp.active
                            
                        MDLabel:
                            text: '  to   '
                            color: (0.07,0.07,0.07,1)
                        
                        MDTextField:
                            id: temp_max
                            hint_text: "Max"
                            input_filter: "int"
                            color_mode: 'custom'
                            line_color_focus: (0.81,0.11,0.11,1)
                            line_color_normal: (0.81,0.11,0.11,1)
                            hint_text_color_normal: (0.81,0.11,0.11,1)
                            text_color_normal: (0.81,0.11,0.11,1)
                            text_color_focus: (0,0,0,1)
                            mode: "line"
                            disabled: not switch_temp.active
                        

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.1
                        pos_hint: {'center_x':.5, 'center_y':.2}
                        Widget:
                            size_hint_x: 0.3

                        MDLabel:
                            text: 'Enable Humidity Range?'
                            color: (0.07,0.07,0.07,1)

                        MDSwitch:
                            id: switch_hum
                            icon_active: "check"

                            track_color_active: "lightblue"
                            thumb_color_inactive: "lightgrey"
                            thumb_color_active: "lightblue"
                            track_color_disabled: "lightgrey"

                        Widget:
                            size_hint_x: 0.3

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.1
                        pos_hint: {'center_x':.5, 'center_y':.1}
                        adaptive_width: True

                        # MDLabel:
                        #     text: 'Turn fan off when temperature is between'
                        #     color: (0.07,0.07,0.07,1)
                        
                        MDTextField:
                            id: temp_min
                            hint_text: "Min"
                            input_filter: "int"
                            color_mode: 'custom'
                            line_color_focus: (0.58,0.83,0.93,1)
                            line_color_normal: (0.58,0.83,0.93,1)
                            hint_text_color_normal: (0.58,0.83,0.93,1)
                            text_color_normal: (0.58,0.83,0.93,1)
                            text_color_focus: (0,0,0,1)
                            mode: "line"
                            disabled: not switch_hum.disabled
                            
                        MDLabel:
                            text: '  to   '
                            color: (0.07,0.07,0.07,1)
                        
                        MDTextField:
                            id: temp_max
                            hint_text: "Max"
                            input_filter: "int"
                            color_mode: 'custom'
                            line_color_focus: (0.81,0.11,0.11,1)
                            line_color_normal: (0.81,0.11,0.11,1)
                            hint_text_color_normal: (0.81,0.11,0.11,1)
                            text_color_normal: (0.81,0.11,0.11,1)
                            text_color_focus: (0,0,0,1)
                            mode: "line"
                            disabled: not switch_hum.disabled
                        


                    # BoxLayout:
                    #     pos_hint: {'center_x':.33, 'center_y':.3}
                    #     padding: 10
                    #     Label:
                    #         text: 'Default'
                    #         color: (0.07,0.07,0.07,1)
                    #     RangeSlider:
                    #         id: s_temp
                    #         size_hint_x: None
                    #         width: '48dp'
                    #         orientation: 'vertical'
                    #         value1: 50
                    #     BoxLayout:
                    #         orientation: 'vertical'
                    #         Label:
                    #             text: '{}'.format(s_temp.value[1])
                    #             color: (0.07,0.07,0.07,1)
                    #         Label:
                    #             text: '{}'.format(s_temp.value[0])
                    #             color: (0.07,0.07,0.07,1)

                    #     Label:
                    #         text: 'Stepped'
                    #         color: (0.07,0.07,0.07,1)
                    #     RangeSlider:
                    #         id: s_hum
                    #         size_hint_x: None
                    #         height: '6dp'
                    #         orientation: 'vertical'
                    #         step: 20
                    #         value2: 60
                    #     Label:
                    #         text: '{}'.format(s_hum.value[1])
                    #         color: (0.07,0.07,0.07,1)
                    #     Label:
                    #         text: '{}'.format(s_hum.value[0])
                    #         color: (0.07,0.07,0.07,1)

                            


            MDBottomNavigationItem:
                id: schedule_screen
                name: 'schedule_screen'
                text: 'Schedule'
                icon: 'fan-clock'
                orientation: 'vertical'
                BoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Scheduling Assistant"
                        right_action_items: [["clock-plus-outline", lambda x: root.show_time_picker(1)], ["delete", lambda x: root.remove_schedule()]]

                    ScrollView:
                        MDList:
                            id: schedule_list
                    
            


<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True

